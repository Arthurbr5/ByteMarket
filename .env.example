# Configurações do Servidor
NODE_ENV=development
PORT=3000

# Mercado Pago (SDK v2)
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=APP_USR-seu-access-token-aqui
MERCADOPAGO_PUBLIC_KEY=APP_USR-sua-public-key-aqui

# Resend (Email Transacional)
# Obtenha em: https://resend.com/api-keys
# Free tier: 3.000 emails/mês
RESEND_API_KEY=re_sua_api_key_aqui
FROM_EMAIL=noreply@seudominio.com

# URL do Cliente (Frontend)
CLIENT_URL=http://localhost:3000

